@model MainVM


@{
    ViewData["title"] = "Index";
}

<div class="container">
    <div class="row">

        <table class="table">
            <thead>
                <tr>

                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Profession</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.profession</td>
                    </tr>

                }

            </tbody>
        </table>

        <table class="table">
            <thead>
                <tr>

                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.company)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                       
                    </tr>

                }

            </tbody>
        </table>


    </div>
</div>